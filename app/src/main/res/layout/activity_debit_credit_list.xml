<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layoutDirection="rtl"
    android:background="@color/md_blue_grey_50"
    android:id="@+id/creditDebitRelativeLayout"
    tools:context="ir.behrooz.loan.DebitCreditListActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/creditDebit_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:scrollbars="vertical"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        />
    <ProgressBar
        android:id="@+id/creditDebit_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:indeterminateTint="@color/md_green_A700"
        android:visibility="gone" />
</RelativeLayout>